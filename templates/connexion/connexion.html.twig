{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoRide{% endblock %}

{% block body %}

<!-- HERO -->
<section class="hero-global hero-connexion d-flex align-items-center text-center position-relative">
  <div class="container">
    <h2 class="hero-title text-white mb-3">Connexion</h2>
    <p class="hero-tagline text-white mb-4">Accédez à votre compte EcoRide</p>
  </div>
</section>

<!-- FORMULAIRE -->
<section class="connexion-section py-5 bg-ecoride-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">

        <div class="ecoride-form bg-white shadow p-4 rounded-4">

          <div class="text-center mb-4">
            <h2 class="fw-bold text-eco-primary">Connexion</h2>
            <p class="text-muted">Accès à votre compte EcoRide</p>
          </div>

          <form method="post" action="{{ path('app_connexion') }}">

            <!-- EMAIL -->
            <div class="mb-3">
              <label for="email" class="form-label fw-semibold text-dark">Adresse e-mail</label>
              <input
                type="email"
                id="email"
                name="email"
                class="eco-input"
                placeholder="exemple@email.com"
                required
              >
            </div>

            <!-- MOT DE PASSE + œil -->
            <div class="mb-3">
              <label for="password" class="form-label fw-semibold text-dark">Mot de passe</label>

              <div class="eco-input-wrapper">
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="eco-input password-input"
                  placeholder="Entrez votre mot de passe"
                  required
                >

                <button type="button"
                        class="toggle-password"
                        data-target="password">
                  <i class="bi bi-eye-slash"></i>
                </button>
              </div>
            </div>

            <!-- CSRF -->
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- OPTIONS -->
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="remember_me">
                <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
              </div>

              <a href="#" class="small text-decoration-none text-success">
                Mot de passe oublié ?
              </a>
            </div>

            <!-- BOUTON AVEC LOADER -->
            <button type="submit" class="btn btn-ecoride w-100 submit-loader-btn">
              Se connecter
            </button>


            <p class="text-center mt-4 mb-0 text-muted">
              Pas encore de compte ?
              <a href="{{ path('app_inscription') }}" class="text-success fw-semibold">
                Inscrivez-vous
              </a>
            </p>

          </form>

        </div>

      </div>
    </div>
  </div>
</section>

{% endblock %}
