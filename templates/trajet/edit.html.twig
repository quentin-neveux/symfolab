{% extends 'base.html.twig' %}

{% block title %}Modifier un trajet - EcoRide{% endblock %}

{% block body %}

{# ============================================================
   HERO
============================================================ #}
<section class="hero-global hero-proposer d-flex align-items-center text-center position-relative">
    <div class="container">
        <h2 class="hero-title mb-3 text-white">Modifier un trajet</h2>
    </div>
</section>


{# ============================================================
   FORMULAIRE DE MODIFICATION
============================================================ #}
<section class="proposer-section py-5 bg-ecoride-light">
    <div class="container d-flex justify-content-center">

        <div class="col-md-7 col-lg-6">
            <div class="card ecoride-form shadow p-4 rounded-4">

                {# TITRE + INFOS TRAJET #}
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-success">Modifier ton trajet</h2>

                    <p class="text-muted mb-1">
                        {{ trajet.villeDepart }} → {{ trajet.villeArrivee }}
                    </p>

                    <p class="text-muted">
                        {{ trajet.dateDepart|date('d/m/Y à H:i') }}
                    </p>
                </div>


                {# --------------------------------------------
                   FORMULAIRE
                --------------------------------------------- #}
                {{ form_start(form) }}
                {{ form_errors(form) }}


                {# DATE NON MODIFIABLE #}
                <div class="mb-3">
                    <label class="form-label text-muted">Date du trajet</label>
                    <div class="form-control bg-light rounded px-3 py-2">
                        {{ trajet.dateDepart|date('d/m/Y') }}
                    </div>
                </div>
                
                {# --------------------------------------------
                   CHAMPS EN LECTURE SEULE
                --------------------------------------------- #}

                <div class="mt-4 mb-3 text-muted small">
                    <label class="form-label">Ville de départ</label>
                    <div class="form-control bg-light rounded px-3 py-2">
                        {{ trajet.villeDepart }}
                    </div>
                </div>

                <div class="mb-3 text-muted small">
                    <label class="form-label">Ville d’arrivée</label>
                    <div class="form-control bg-light rounded px-3 py-2">
                        {{ trajet.villeArrivee }}
                    </div>
                </div>


                {# NOUVELLE HEURE DE DÉPART #}
                <div class="mb-3">
                    {{ form_row(form.dateDepart, {
                        label: "Nouvelle heure de départ",
                        attr: { class: 'form-control rounded px-3 py-2' }
                    }) }}
                </div>


                {# PLACES DISPONIBLES #}
                <div class="mb-3">
                    {{ form_row(form.placesDisponibles, {
                        label: "Places disponibles",
                        attr: { class: 'form-control rounded px-3 py-2' }
                    }) }}
                </div>


                {# VÉHICULE (modifiable si présent) #}
                {% if form.vehicle is defined %}
                    <div class="mb-3">
                        {{ form_row(form.vehicle, {
                            label: "Véhicule utilisé",
                            attr: { class: 'form-control rounded px-3 py-2' }
                        }) }}
                    </div>
                {% endif %}


                {# --------------------------------------------
                   BOUTONS
                --------------------------------------------- #}
                <div class="text-center mt-4">

                    <button type="submit"
                            class="btn btn-ecoride w-100 py-2 rounded-pill fw-semibold">
                        Enregistrer les modifications
                    </button>

                    <a href="{{ path('trajet_historique') }}"
                       class="btn btn-outline-secondary w-100 mt-3 py-2 rounded-pill">
                        ↩ Retour à mes trajets
                    </a>

                </div>


                {{ form_end(form) }}

            </div>
        </div>

    </div>
</section>

{% endblock %}
