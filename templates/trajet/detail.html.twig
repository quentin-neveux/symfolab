{% extends 'base.html.twig' %}

{% block title %}Détail du trajet - EcoRide{% endblock %}

{% block body %}

<section class="hero-global hero-recherche d-flex align-items-center text-center text-white position-relative">
    <div class="container">
        <h2 class="hero-title text-white mb-3">Détail du trajet</h2>
        <p class="hero-tagline mb-0">Consulte toutes les informations importantes</p>
    </div>
</section>

<section class="py-5 bg-ecoride-light">
    <div class="container py-5">
        <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
            <div class="row g-5 align-items-start">

                {# ===================== FLAGS ===================== #}
                {% set isConducteur = app.user and trajet.conducteur and trajet.conducteur.id == app.user.id %}
                {% set isPassager = reservation is not null %}

                {# ✅ Trajet terminé = uniquement flag métier finished #}
                {% set isFinished = trajet.finished %}

                {# ✅ Optionnel UI : trajet dans le passé (DateTime vs DateTime) #}
                {% set isPast = trajet.dateDepart < date('now') %}

                {# ✅ Passagers : on garde la variable controller si elle existe, sinon fallback sur relation #}
                {% if passagers is not defined %}
                    {% set passagers = trajet.trajetPassagers is defined ? trajet.trajetPassagers : [] %}
                {% endif %}

                {# ===================== COLONNE GAUCHE ===================== #}
                <div class="col-lg-8">

                    <h2 class="text-success fw-bold d-flex align-items-center gap-3 mb-4">
                        {{ trajet.villeDepart }} → {{ trajet.villeArrivee }}

                        {% if trajet.vehicle.energie == 'Électrique' %}
                            <span class="eco-badge-round">
                                <img src="{{ asset('assets/images/ecorideLogo.png') }}" alt="EcoRide">
                            </span>
                        {% endif %}
                    </h2>

                    <div class="mb-4">
                        <p><i class="bi bi-calendar2 text-success me-2"></i>{{ trajet.dateDepart|date('d/m/Y') }}</p>
                        <p><i class="bi bi-clock text-success me-2"></i>{{ trajet.dateDepart|date('H:i') }}</p>
                        <p><i class="bi bi-people text-success me-2"></i>{{ trajet.placesDisponibles }} place(s)</p>
                        <p><i class="bi bi-cash text-success me-2"></i>{{ trajet.tokenCost }} EcoCrédits ECR / pers</p>

                        <p class="small text-muted mt-2">
                            {{ trajet.vehicle.marque }} {{ trajet.vehicle.modele }}
                            • {{ trajet.vehicle.energie }}
                            • {{ trajet.vehicle.immatriculation }}
                        </p>

                        {% if trajet.commentaire %}
                            <p class="fst-italic text-secondary mt-3">{{ trajet.commentaire }}</p>
                        {% endif %}
                    </div>

                    {# ===================== CONDUCTEUR ===================== #}
                    <h4 class="text-success fw-bold mb-3">Conducteur</h4>

                    <div class="d-flex gap-3 align-items-start mb-4">

                        {% if trajet.conducteur.photo %}
                            <img src="{{ asset('uploads/photos/' ~ trajet.conducteur.photo) }}"
                                 class="rounded shadow-sm conducteur-photo"
                                 alt="Photo conducteur">
                        {% else %}
                            <div class="avatar-circle me-3">
                                {% set initialPrenom = trajet.conducteur.prenom|default('')|first|upper %}
                                {% set initialNom    = trajet.conducteur.nom|default('')|first|upper %}
                                {{ (initialPrenom ~ initialNom)|trim ?: '?' }}
                            </div>
                        {% endif %}

                        <div>
                            <p class="fw-semibold mb-1">
                                {{ trajet.conducteur.prenom }} {{ trajet.conducteur.nom }}
                            </p>

                            {% if averageRating %}
                                <div class="d-flex align-items-center">
                                    <span class="fw-semibold me-2">{{ averageRating }}/5</span>
                                    <span class="stars">
                                        {% for i in 1..5 %}
                                            {% if i <= averageRating %}★{% else %}☆{% endif %}
                                        {% endfor %}
                                    </span>
                                </div>
                            {% else %}
                                <p class="text-muted fst-italic mb-0">Aucune note</p>
                            {% endif %}

                            {% if app.user %}
                                <div class="mt-2">
                                    <a href="{{ path('app_profil_public', { id: trajet.conducteur.id }) }}"
                                       class="btn btn-sm btn-outline-success rounded-pill">
                                        Voir le profil public
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    {% if trajet.conducteur.telephone %}
                        {% set canSeePhone =
                            app.user and (
                                app.user == trajet.conducteur
                                or reservation
                            )
                        %}

                        {% if canSeePhone %}
                            <div class="mt-2 mb-4">
                                <span class="fw-semibold">Téléphone :</span>
                                <span class="text-success fw-bold">
                                    {{ trajet.conducteur.telephone }}
                                </span>
                            </div>
                        {% else %}
                            <div class="mt-2 mb-4 text-muted fst-italic">
                                Numéro de téléphone validé par EcoRide
                            </div>
                        {% endif %}
                    {% endif %}

                    {# ===================== PASSAGERS (VISIBLE QUAND TERMINÉ OU CONDUCTEUR) ===================== #}
                    {% if isConducteur or isFinished %}
                        <h4 class="text-success fw-bold mt-5 mb-3">Passagers</h4>

                        {% if passagers is empty %}
                            <p class="text-muted fst-italic">
                                Aucun passager.
                            </p>
                        {% else %}
                            <ul class="list-group">
                                {% for p in passagers %}
                                    <li class="list-group-item d-flex align-items-center gap-3">

                                        {% set photoPassager = p.passager.photo
                                            ? 'uploads/photos/' ~ p.passager.photo
                                            : 'assets/images/default-user.png' %}

                                        <img src="{{ asset(photoPassager) }}"
                                             class="rounded-circle"
                                             width="40" height="40"
                                             alt="Photo passager">

                                        <span class="fw-semibold">
                                            {% if app.user %}
                                                <a href="{{ path('app_profil_public', { id: p.passager.id }) }}"
                                                   class="text-decoration-none text-dark">
                                                    {{ p.passager.prenom }} {{ p.passager.nom }}
                                                </a>
                                            {% else %}
                                                {{ p.passager.prenom }} {{ p.passager.nom }}
                                            {% endif %}
                                        </span>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    {% endif %}

                </div>

                {# ===================== COLONNE DROITE ===================== #}
                <div class="col-lg-4">

                  {% set isConducteur = app.user and trajet.conducteur and trajet.conducteur.id == app.user.id %}
                  {% set isPassager = reservation is not null %}

                  {# ✅ Terminé = dépend du rôle #}
                  {% set isDone =
                    isConducteur
                      ? (trajet.conducteurConfirmeFin is defined and trajet.conducteurConfirmeFin)
                      : (
                          isPassager
                          and (trajet.conducteurConfirmeFin is defined and trajet.conducteurConfirmeFin)
                          and (reservation.passagerConfirmeFin is defined and reservation.passagerConfirmeFin)
                        )
                  %}

                  {# ✅ “Clôturé conducteur” = conducteur a cliqué Terminer #}
                  {% set conducteurClosed = (trajet.conducteurConfirmeFin is defined and trajet.conducteurConfirmeFin) %}

                  <div class="text-center mb-4">
                    <h3 class="text-success fw-bold mb-1">
                      {% if isConducteur %}
                        {% if conducteurClosed %}Trajet terminé{% else %}Gestion du trajet{% endif %}
                      {% elseif isPassager %}
                        {% if isDone %}Trajet terminé{% elseif conducteurClosed %}Fin à confirmer{% else %}Participation au trajet{% endif %}
                      {% else %}
                        Réserver ce trajet
                      {% endif %}
                    </h3>

                    <p class="text-muted small mb-0">
                      {% if not app.user %}
                        Connexion requise
                      {% elseif isConducteur %}
                        {% if conducteurClosed %}Merci d'avoir conduit avec EcoRide !{% else %}Tu es le conducteur{% endif %}
                      {% elseif isPassager %}
                        {% if isDone %}Merci d'avoir voyagé EcoRide !{% elseif conducteurClosed %}Confirme la fin pour débloquer la note{% else %}Réservation confirmée{% endif %}
                      {% endif %}
                    </p>
                  </div>

                  <div class="d-grid gap-3">

                    {# ===================== CONDUCTEUR ===================== #}
                    {% if isConducteur %}

                      {% if conducteurClosed %}
                        <div class="alert alert-success rounded-4 shadow-sm mb-0">
                          Ce trajet est terminé. Les actions de modification/annulation ne sont plus disponibles.
                        </div>
                      {% else %}
                        <a href="{{ path('app_trajet_edit', { id: trajet.id }) }}"
                           class="btn btn-ecoride py-3 rounded-pill w-100">
                          Modifier le trajet
                        </a>

                        {#  Annulation uniquement avant départ #}
                        {% if not hasStarted %}
                        <form method="post"
                              action="{{ path('trajet_annuler_conducteur', { id: trajet.id }) }}"
                              onsubmit="return confirm('Es-tu sûr de vouloir annuler ce trajet ?');">
                          <input type="hidden" name="_token" value="{{ csrf_token('annuler_trajet_' ~ trajet.id) }}">
                          <button type="submit" class="btn btn-danger py-3 rounded-pill w-100">
                            Annuler le trajet
                          </button>
                        </form>

                        <form method="post"
                              action="{{ path('trajet_arrivee', { id: trajet.id }) }}"
                              onsubmit="return confirm('Marquer ce trajet comme terminé ?');">
                          <button type="submit" class="btn btn-success py-3 rounded-pill w-100">
                            Terminer
                          </button>
                        </form>
                      {% endif %}

                    {# ===================== PASSAGER ===================== #}
                    {% elseif isPassager %}

                      {# 1) Tant que conducteur n'a pas terminé : annulation possible #}
                      {% if not conducteurClosed and not reservation.passagerConfirmeFin %}
                        <form method="post"
                              action="{{ path('trajet_annuler', { id: trajet.id }) }}"
                              onsubmit="return confirm('Voulez-vous vraiment annuler votre participation ?');"
                              class="d-grid">
                          <input type="hidden" name="_token" value="{{ csrf_token('annuler_trajet_' ~ trajet.id) }}">
                          <input type="hidden" name="redirect" value="{{ path('app_home') }}">
                          <button type="submit" class="btn btn-outline-danger py-3 rounded-pill">
                            Annuler ma participation
                          </button>
                        </form>
                      {% endif %}

                      {# 2) Conducteur a terminé : le passager doit confirmer #}
                      {% if canConfirmEnd %}
                        <form method="post"
                              action="{{ path('trajet_passager_confirmer_fin', { id: reservation.id }) }}"
                              onsubmit="return confirm('Confirmer la fin du trajet ?');">
                          <button type="submit" class="btn btn-success py-3 rounded-pill w-100">
                            ✅ Confirmer la fin du trajet
                          </button>
                        </form>
                      {% endif %}

                      {# 3) Après confirmation des 2 côtés : avis + signalement #}
                      {% if canReview %}
                        <a href="{{ path('app_review_new', { id: trajet.id }) }}"
                           class="btn btn-success py-3 rounded-pill">
                          ⭐ Laisser un avis sur {{ trajet.conducteur.prenom }}
                        </a>

                        <a href="{{ path('trajet_signaler', { id: trajet.id }) }}"
                           class="btn btn-outline-danger py-3 rounded-pill">
                          ⚠ Signaler le trajet / conducteur
                        </a>
                      {% endif %}

                      {# 4) Terminé mais déjà noté #}
                      {% if isDone and not canReview %}
                        <div class="alert alert-success rounded-4 shadow-sm mb-0">
                          Ce trajet est terminé.
                        </div>
                      {% endif %}

                    {# ===================== VISITEUR / NON PASSAGER ===================== #}
                    {% else %}

                      {% if conducteurClosed %}
                        <div class="alert alert-success rounded-4 shadow-sm mb-0">
                          Ce trajet est terminé.
                        </div>
                      {% else %}
                        <a href="{{ path('trajet_reserver_confirm', { id: trajet.id }) }}"
                           class="btn btn-ecoride py-3 rounded-pill">
                          Réserver ce trajet
                        </a>
                      {% endif %}

                    {% endif %}

                  </div>
                </div>

            </div>
        </div>
    </div>
</section>
{% endblock %}
