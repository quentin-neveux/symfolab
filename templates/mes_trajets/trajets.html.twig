{% extends 'base.html.twig' %}

{% block title %}Mes trajets - EcoRide{% endblock %}

{% block body %}

<section class="hero-global hero-historique text-center text-white">
  <div class="container">
    <h1 class="hero-title">Mes trajets</h1>
    <p class="hero-tagline">Retrouvez vos trajets proposés ou réservés</p>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container">
    <div class="row g-4">
      {% for trajet in trajets %}
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body">
              <h5 class="fw-bold text-success mb-2">
                {{ trajet.villeDepart }} → {{ trajet.villeArrivee }}
              </h5>
              {# <p class="text-muted mb-1">
                <i class="bi bi-calendar"></i> {{ trajet.dateDepart|date('d/m/Y') }} à {{ trajet.heureDepart }}
              </p> #}
              <p class="text-muted mb-1">
                <i class="bi bi-person"></i> {{ trajet.nbPlaces }} places • {{ trajet.prix }} €
              </p>
              <a href="#" class="btn btn-ecoride w-100 mt-3">Voir le trajet</a>
            </div>
          </div>
        </div>
      {% else %}
        <p class="text-center text-muted">Aucun trajet enregistré pour le moment.</p>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}
