{% extends 'base.html.twig' %}

{% block title %}R√©sultats de recherche - EcoRide{% endblock %}

{% block body %}

{# ==========================
   SAFE DEFAULTS (anti-null)
========================== #}
{% set vd = ville_depart|default('') %}
{% set va = ville_arrivee|default('') %}

{# date_depart peut √™tre string (GET) ou DateTime (controller) ou '' / null #}
{% set date_value = '' %}
{% set date_label = 'Dates flexibles' %}

{% if date_depart is defined and date_depart is not empty %}
  {% if date_depart is date %}
    {% set date_value = date_depart|date('Y-m-d') %}
    {% set date_label = date_depart|date('d/m/Y') %}
  {% else %}
    {# String venant du GET (ex: 2026-01-15) #}
    {% set date_value = date_depart %}
    {% set date_label = date_depart %}
  {% endif %}
{% endif %}

{# ============================================================
   HEADER COMPACT MOBILE
============================================================ #}
<section class="search-header-mobile d-md-none bg-white shadow-sm py-3">
  <div class="container">

    <div class="d-flex align-items-center justify-content-between">
      <h2 class="fs-5 fw-bold mb-0 text-success">
        {{ vd != '' ? vd : 'D√©part' }} ‚Üí {{ va != '' ? va : 'Arriv√©e' }}
      </h2>

      <button id="open-filters" class="btn btn-outline-success rounded-pill px-3 py-1" type="button">
        <i class="bi bi-sliders"></i> Filtrer
      </button>
    </div>

    <p class="text-muted small mt-1">
      {{ date_label }}
    </p>

    <p class="fw-bold text-success mb-0 mt-3">
      {{ trajets is defined ? (trajets|length) : 0 }} trajet(s) disponible(s)
    </p>

  </div>
</section>

{# ============================================================
   HEADER DESKTOP
============================================================ #}
<section class="d-none d-md-block bg-light py-4 border-bottom">
  <div class="container">
    <h3 class="text-success fw-bold mb-1">
      R√©sultats pour : {{ vd != '' ? vd : 'D√©part' }} ‚Üí {{ va != '' ? va : 'Arriv√©e' }}
    </h3>
    <p class="text-muted mb-0">
      {{ trajets is defined ? (trajets|length) : 0 }} trajet(s) disponible(s)
    </p>
  </div>
</section>

{# ============================================================
   CONTENU
============================================================ #}
<section class="py-4 bg-ecoride-light">
  <div class="container">
    <div class="row">

      {# ============================================================
         FILTRES DESKTOP
      ============================================================ #}
      <aside class="col-lg-3 d-none d-lg-block">
        <div class="bg-white shadow-sm rounded-4 p-4">

          <form method="GET" action="{{ path('app_recherche') }}">

            <input type="hidden" name="ville_depart" value="{{ vd }}">
            <input type="hidden" name="ville_arrivee" value="{{ va }}">
            <input type="hidden" name="date_depart" value="{{ date_value }}">

            <h4 class="text-success fw-bold mb-3">Trier par</h4>

            <label class="d-block mb-2">
              <input type="radio" name="sort" value="depart_asc"
                     {% if app.request.query.get('sort') is null or app.request.query.get('sort') == 'depart_asc' %}checked{% endif %}>
              D√©part le plus t√¥t
            </label>

            <label class="d-block mb-2">
              <input type="radio" name="sort" value="prix_asc"
                     {% if app.request.query.get('sort') == 'prix_asc' %}checked{% endif %}>
              Prix le plus bas
            </label>

            <hr>

            <h4 class="text-success fw-bold mb-3">Type de v√©hicule</h4>

            {% set energies = app.request.query.all('energie')|default([]) %}

            <label class="d-block mb-2 ms-3">
              <input type="checkbox" name="energie[]" value="√âlectrique" {% if '√âlectrique' in energies %}checked{% endif %}>
              üîã √âlectrique
            </label>
            <label class="d-block mb-2 ms-3">
              <input type="checkbox" name="energie[]" value="Essence" {% if 'Essence' in energies %}checked{% endif %}>
              ‚õΩ Essence
            </label>
            <label class="d-block mb-2 ms-3">
              <input type="checkbox" name="energie[]" value="Diesel" {% if 'Diesel' in energies %}checked{% endif %}>
              üü§ Diesel
            </label>
            <label class="d-block mb-2 ms-3">
              <input type="checkbox" name="energie[]" value="Hybride" {% if 'Hybride' in energies %}checked{% endif %}>
              ‚ôªÔ∏è Hybride
            </label>

            <hr>

            <h4 class="text-success fw-bold mb-3">Prix maximum</h4>
            <input
              type="number"
              class="form-control mb-3"
              name="prix_max"
              placeholder="ex : 50"
              value="{{ app.request.query.get('prix_max')|default('') }}"
            >

            <div class="mt-4">
              <button type="submit" class="btn btn-ecoride w-100 rounded-pill">
                <i class="bi bi-arrow-clockwise me-2"></i>
                Appliquer les filtres
              </button>
            </div>

          </form>

        </div>
      </aside>

      {# ============================================================
         LISTE DES TRAJETS
      ============================================================ #}
      <div class="col-lg-9">

        {% if trajets is not defined or trajets is empty %}

          <p class="text-muted text-center">Aucun trajet trouv√© pour cette date.</p>

          <form id="search-form" action="{{ path('app_recherche') }}" method="get" class="mx-auto mb-4">
            <div class="eco-searchbar">

              <div class="eco-search-field position-relative">
                <i class="bi bi-geo-alt text-success me-2"></i>
                <input
                  type="text"
                  id="ville-depart"
                  class="form-control"
                  name="ville_depart"
                  placeholder="D√©part"
                  autocomplete="off"
                  required
                >
              </div>

              <div class="eco-search-field position-relative">
                <i class="bi bi-flag text-success me-2"></i>
                <input
                  type="text"
                  id="ville-arrivee"
                  class="form-control"
                  name="ville_arrivee"
                  placeholder="Arriv√©e"
                  autocomplete="off"
                  required
                >
              </div>

              <div class="eco-search-field">
                <i class="bi bi-calendar-event text-success me-2"></i>
                <input type="date" class="form-control" name="date_depart">
              </div>

              <input type="hidden" name="nb_passagers" id="nb-passagers-input" value="1">

              <button type="submit" class="eco-search-btn">
                Rechercher
              </button>

            </div>
          </form>

          {# SUGGESTION DE TRAJET #}
          {% if trajetSuggestion is defined and trajetSuggestion %}
            <div class="alert alert-success text-center mt-3">
              Prochain trajet disponible :
              <strong>{{ trajetSuggestion.dateDepart|date('d/m H:i') }}</strong><br>
              <a href="{{ path('app_trajet_detail', {id: trajetSuggestion.id}) }}"
                 class="btn btn-ecoride mt-2 rounded-pill">
                Voir ce trajet
              </a>
            </div>
          {% endif %}

        {% else %}

          <div class="trajets-list d-flex flex-column gap-3">

            {% for trajet in trajets %}
              <div class="trajet-card bg-white rounded-4 shadow-sm p-3 p-lg-4">

                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <p class="mb-1 small text-muted">
                      <i class="bi bi-calendar text-success me-1"></i>
                      {{ trajet.dateDepart|date('d/m') }}
                      &nbsp;‚Ä¢&nbsp;
                      <i class="bi bi-clock text-success me-1"></i>
                      {{ trajet.dateDepart|date('H:i') }}
                    </p>

                    <h5 class="fw-bold text-success mb-1">
                      {{ trajet.villeDepart }} ‚Üí {{ trajet.villeArrivee }}
                    </h5>

                    <p class="mb-1 small text-muted">
                      <i class="bi bi-people text-success me-1"></i>
                      {{ trajet.placesDisponibles }} place(s)
                    </p>

                    <p class="mb-1 small text-muted">
                      {% if trajet.vehicle %}
                        {{ trajet.vehicle.marque }} {{ trajet.vehicle.modele }} ‚Ä¢ {{ trajet.vehicle.energie }}
                      {% else %}
                        V√©hicule non renseign√©
                      {% endif %}

                      {% if trajet.vehicle and trajet.vehicle.energie == '√âlectrique' %}
                        <span class="badge bg-success ms-2">√âco</span>
                      {% endif %}
                    </p>

                  </div>

                  <div class="text-end">
                    <span class="fw-bold fs-3 text-success d-block">
                      {{ trajet.tokenCost }} EcoCr√©dits ECR
                    </span>
                    <span class="small text-muted">par personne</span>
                  </div>
                </div>

                <div class="d-flex align-items-center mt-3 pt-3 border-top">
                  <div class="avatar-circle me-3">
                    {{ trajet.conducteur.prenom|default('')|first|upper }}{{ trajet.conducteur.nom|default('')|first|upper }}
                  </div>

                  <p class="mb-0 fw-semibold">
                    {{ trajet.conducteur.prenom }} {{ trajet.conducteur.nom }}
                  </p>
                </div>

                <a href="{{ path('app_trajet_detail', { id: trajet.id }) }}"
                   class="btn btn-ecoride w-100 mt-3 rounded-pill">
                  Voir les d√©tails
                </a>
              </div>
            {% endfor %}

          </div>

        {% endif %}

      </div>

    </div>
  </div>
</section>

{# ============================================================
   FILTRES MOBILE
============================================================ #}
<div id="filters-panel-mobile" class="filters-panel-mobile">
  <div class="panel-content bg-white">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="text-success fw-bold mb-0">üîç Filtres</h4>

      <button id="close-filters" type="button" class="btn btn-outline-danger btn-sm rounded-pill px-3">
        ‚úï
      </button>
    </div>

    <hr>

    <h5 class="text-success fw-bold mt-3">Trier par</h5>

    <label class="d-block mb-2">
      <input type="radio" name="sortMobile" value="depart_asc" checked>
      D√©part le plus t√¥t
    </label>

    <label class="d-block mb-2">
      <input type="radio" name="sortMobile" value="prix_asc">
      Prix le plus bas
    </label>

    <hr>

    <h5 class="text-success fw-bold mt-3">Type de v√©hicule</h5>

    <label class="d-block mb-2 ms-3">
      <input type="checkbox" value="√âlectrique"> üîã √âlectrique
    </label>
    <label class="d-block mb-2 ms-3">
      <input type="checkbox" value="Essence"> ‚õΩ Essence
    </label>
    <label class="d-block mb-2 ms-3">
      <input type="checkbox" value="Diesel"> üü§ Diesel
    </label>
    <label class="d-block mb-2 ms-3">
      <input type="checkbox" value="Hybride"> ‚ôªÔ∏è Hybride
    </label>

    <div class="mt-4">
      <button type="button" class="btn btn-ecoride w-100 rounded-pill" id="apply-filters">
        <i class="bi bi-arrow-clockwise me-2"></i>
        Appliquer les filtres
      </button>
    </div>

  </div>
</div>

{% endblock %}
