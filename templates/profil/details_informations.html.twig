{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.prenom }} {{ user.nom }} - EcoRide{% endblock %}

{% block body %}
<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      {# =============================
         EN-TÊTE PROFIL PUBLIC
         ============================= #}
      <div class="profile-header d-flex flex-wrap align-items-center p-4 rounded shadow-sm mb-4 bg-white">
        {# Avatar #}
        <div class="me-4 mb-3 mb-md-0">
          {% if user.photo %}
            <img src="{{ asset('uploads/photos/' ~ user.photo) }}"
                 class="rounded-circle shadow-sm"
                 alt="Photo de profil"
                 width="110" height="110">
          {% else %}
            <div class="profile-avatar rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                 style="width:110px;height:110px;font-size:2rem;">
              {% set initials = (user.prenom|first ~ user.nom|first)|upper %}
              <span>{{ initials }}</span>
            </div>
          {% endif %}
        </div>

        {# Nom + ancienneté #}
        <div class="flex-grow-1">
          <h3 class="mb-1">{{ user.prenom }} {{ user.nom }}</h3>

          <p class="text-muted mb-1">
            Membre EcoRide depuis {{ user.createdAt|date('m/Y') }}
          </p>

          <p class="text-muted small mb-0">
            Profil public visible uniquement aux membres connectés.
          </p>
        </div>

        {# Note moyenne #}
        {% if averageRating is defined and averageRating %}
          <div class="d-flex align-items-center ms-md-4 mt-3 mt-md-0">
            <span class="fw-bold me-2">{{ averageRating }}/5</span>
            <span class="text-warning" style="font-size:1.3rem;">
              {% for i in 1..5 %}
                {% if i <= averageRating %}★{% else %}☆{% endif %}
              {% endfor %}
            </span>
          </div>
        {% endif %}
      </div>

      {# =============================
         À PROPOS
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">À propos de {{ user.prenom }}</h5>

        {% if user.bio %}
          <p class="mb-0">{{ user.bio }}</p>
        {% else %}
          <p class="text-muted small mb-0">
            {{ user.prenom }} n’a pas encore renseigné de biographie.
          </p>
        {% endif %}
      </div>

      {# =============================
         Préférences de voyage
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">Préférences de voyage</h5>

        <ul class="list-unstyled mb-0">
          <li class="mb-2">
            <i class="bi bi-music-note-beamed text-success me-2"></i>
            Musique :
            <strong>{{ user.musique ? user.musique|capitalize : 'Non renseigné' }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-chat-dots text-success me-2"></i>
            Discussion :
            <strong>{{ user.discussion ? user.discussion|capitalize : 'Non renseigné' }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-heart text-success me-2"></i>
            Animaux :
            <strong>{{ user.animaux ? user.animaux|capitalize : 'Non renseigné' }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-cup-hot text-success me-2"></i>
            Pauses café :
            <strong>{{ user.pausesCafe ? user.pausesCafe|capitalize : 'Non renseigné' }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-wind text-success me-2"></i>
            Fumeur :
            <strong>{{ user.fumeur ? user.fumeur|capitalize : 'Non renseigné' }}</strong>
          </li>
        </ul>
      </div>

      {# =============================
         Véhicules (si conducteur)
         ============================= #}
      {% if vehicles is defined and vehicles|length > 0 %}
        <div class="bg-white p-4 rounded shadow-sm mb-4">
          <h5 class="mb-3">Véhicules de {{ user.prenom }}</h5>

          <ul class="list-group list-group-flush">
            {% for v in vehicles %}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong>{{ v.marque }} {{ v.modele }}</strong><br>
                  <small class="text-muted">
                    {{ v.energie }} — {{ v.places }} places
                  </small>
                </div>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {# =============================
         ⭐ Avis reçus (carrousel continu)
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">Avis reçus</h5>

        {% if reviews is empty %}
          <p class="text-muted small mb-0">
            Aucun avis pour le moment.
          </p>
        {% else %}
          <div class="reviews-scroller-wrapper mt-2">
            <div class="reviews-track">
              {# Série 1 #}
              {% for review in reviews %}
                <div class="review-card">

                  <div class="review-meta small text-muted mb-1">
                    {{ review.createdAt|date('d/m/Y') }}
                  </div>

                  <div class="fw-semibold mb-1">
                    {{ review.author ? review.author.prenom ~ ' ' ~ review.author.nom : 'Utilisateur EcoRide' }}
                  </div>

                  <div class="rating-line d-flex align-items-center mb-2">
                    <span class="text-warning me-2">
                      {% for i in 1..5 %}
                        {% if i <= review.rating %}★{% else %}☆{% endif %}
                      {% endfor %}
                    </span>
                    <span class="small fw-semibold">{{ review.rating }}/5</span>
                  </div>

                  {% if review.comment %}
                    {% set parts = review.comment|split('Points positifs :') %}

                    {# Commentaire principal #}
                    {% if parts[0]|trim %}
                      <p class="comment-text mb-2">
                        {{ parts[0]|trim }}
                      </p>
                    {% endif %}

                    {# Bloc points positifs (si présents) #}
                    {% if parts|length > 1 and parts[1]|trim %}
                      <div class="positive-block small mb-2">
                        <div class="label fw-semibold text-success">
                          ✓ Points positifs
                        </div>
                        <div class="content text-muted">
                          {{ parts[1]|trim }}
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}

                  <hr class="my-2">

                  <p class="text-muted small mb-0">
                    {{ review.trajet.villeDepart }} → {{ review.trajet.villeArrivee }}
                  </p>
                </div>
              {% endfor %}

              {# Série 2 (duplication pour boucle infinie fluide) #}
              {% for review in reviews %}
                <div class="review-card">

                  <div class="review-meta small text-muted mb-1">
                    {{ review.createdAt|date('d/m/Y') }}
                  </div>

                  <div class="fw-semibold mb-1">
                    {{ review.author ? review.author.prenom ~ ' ' ~ review.author.nom : 'Utilisateur EcoRide' }}
                  </div>

                  <div class="rating-line d-flex align-items-center mb-2">
                    <span class="text-warning me-2">
                      {% for i in 1..5 %}
                        {% if i <= review.rating %}★{% else %}☆{% endif %}
                      {% endfor %}
                    </span>
                    <span class="small fw-semibold">{{ review.rating }}/5</span>
                  </div>

                  {% if review.comment %}
                    {% set parts = review.comment|split('Points positifs :') %}

                    {% if parts[0]|trim %}
                      <p class="comment-text mb-2">
                        {{ parts[0]|trim }}
                      </p>
                    {% endif %}

                    {% if parts|length > 1 and parts[1]|trim %}
                      <div class="positive-block small mb-2">
                        <div class="label fw-semibold text-success">
                          ✓ Points positifs
                        </div>
                        <div class="content text-muted">
                          {{ parts[1]|trim }}
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}

                  <hr class="my-2">

                  <p class="text-muted small mb-0">
                    {{ review.trajet.villeDepart }} → {{ review.trajet.villeArrivee }}
                  </p>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      {# Retour #}
      <div class="text-center mt-4">
        <a href="{{ app.request.headers.get('referer') ?? path('app_mes_trajets') }}"
           class="btn btn-outline-secondary rounded-pill px-4">
          ← Retour
        </a>
      </div>

    </div>
  </div>
</section>
{% endblock %}
