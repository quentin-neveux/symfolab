{% extends 'base.html.twig' %}

{% block title %}Mon compte - EcoRide{% endblock %}

{% block body %}

<section class="container my-5">

  <div class="row justify-content-center">
    <div class="col-lg-8">

      {# Sous-menu #}
      {% include 'profil/_profil_header.html.twig' %}

      {# En-tête #}
      <div class="bg-white rounded shadow-sm p-4 mb-4">
        <div class="d-flex justify-content-between align-items-start">
          <div>
            <h3 class="mb-1">Paramètres du compte</h3>
            <p class="text-muted small mb-0">
              Gérez vos informations personnelles, votre sécurité et votre accès au compte.
            </p>
          </div>
          <div class="ms-3">
            <a href="{{ path('app_profil_edit') }}" class="btn btn-ecoride rounded-pill px-4">
              Modifier mon profil
            </a>
          </div>
        </div>
      </div>

      

      {# =============================
         Informations de compte
         ============================= #}
      <div class="bg-white rounded shadow-sm p-4 mb-4">

        <h5 class="mb-3">Informations personnelles</h5>

        <ul class="list-group list-group-flush">

          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Email</span>
            <span class="text-muted">{{ app.user.email }}</span>
          </li>

          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Téléphone</span>
            {% if app.user.telephone %}
              <span class="text-muted">{{ app.user.telephone }}</span>
            {% else %}
              <span class="text-muted small">Non renseigné</span>
            {% endif %}
          </li>

          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Date de naissance</span>
            {% if app.user.dateNaissance %}
              <span class="text-muted">{{ app.user.dateNaissance|date('d/m/Y') }}</span>
            {% else %}
              <span class="text-muted small">Non renseignée</span>
            {% endif %}
          </li>

        </ul>

      </div>

      {# =============================
         Sécurité du compte
         ============================= #}
      <div class="bg-white rounded shadow-sm p-4 mb-4">

        <h5 class="mb-3">Sécurité</h5>

        <ul class="list-group list-group-flush">

          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Mot de passe</span>
            <a href="#" class="text-success small">Modifier</a>
          </li>

          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Dernière modification</span>
            <span class="text-muted small">Indisponible</span>
          </li>

        </ul>

      </div>

      {# =============================
         Déconnexion & Suppression
         ============================= #}
      <div class="bg-white rounded shadow-sm p-4">

        <a href="{{ path('app_logout') }}"
           class="d-block text-danger fw-semibold text-decoration-none mb-2">
          <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
        </a>

        <a href="#" class="small text-muted text-decoration-none">
          Fermer mon compte
        </a>
      </div>

    </div>
  </div>

</section>

{% endblock %}
