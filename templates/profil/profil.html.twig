{% extends 'base.html.twig' %}

{% block title %}Mon profil - EcoRide{% endblock %}

{% block body %}
<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      {# Sous-menu #}
      {% include 'profil/_profil_header.html.twig' %}

      {# Boutons #}
      <div class="d-flex justify-content-center align-items-center gap-3 mt-4 mb-5">
        {% if 'ROLE_ADMIN' in app.user.roles %}
          <a href="{{ path('admin_dashboard') }}" class="btn btn-success rounded-pill px-4 py-2">
            Dashboard Admin
          </a>
        {% endif %}

        <a href="{{ path('app_profil_edit') }}" class="btn btn-ecoride px-4 py-2">
          Modifier mon profil
        </a>
      </div>

      {# Avatar #}
      <div class="me-4 mb-3 mb-md-0">
        {% if app.user.photo %}
          <div class="avatar-circle shadow-sm">
            <img
              src="{{ asset('uploads/photos/' ~ app.user.photo) }}"
              alt="Profil"
              class="avatar-img"
            >
          </div>
        {% else %}
          <div class="profile-avatar rounded-circle d-flex align-items-center justify-content-center shadow-sm"
               style="width:110px;height:110px;font-size:2rem;">
            {% set initials = (app.user.prenom|first ~ app.user.nom|first)|upper %}
            <span>{{ initials }}</span>
          </div>
        {% endif %}
      </div>


        {# Nom + statut + note (√©toiles √† c√¥t√© du nom) #}
        <div class="flex-grow-1">

          <div class="d-flex align-items-center gap-3 flex-wrap">
            <h3 class="mb-1 d-flex align-items-center gap-2 flex-wrap">
              <span>{{ app.user.prenom }} {{ app.user.nom }}</span>
            </h3>
            <div class="d-flex align-items-center">
              {% if averageRating %}
                {% set avg = averageRating|round(0, 'floor') %}
                <span class="d-inline-flex align-items-center">
                  <span class="fw-bold me-2">{{ averageRating }}/5</span>
                  <span class="text-warning" style="font-size:1.3rem; line-height:1;">
                    {% for i in 1..5 %}
                      {% if i <= avg %}‚òÖ{% else %}‚òÜ{% endif %}
                    {% endfor %}
                  </span>
                </span>
              {% endif %}
            </div>
          </div>

          <span class="badge bg-success">Compte confirm√©</span>

          <p class="text-muted mb-0">
            Membre depuis {{ app.user.createdAt|date('m/Y') }}
          </p>
        </div>

        {# Tokens / gains #}
        <div class="token-box ms-md-auto mt-4 mt-md-0">

          <div class="d-flex align-items-center justify-content-md-end mb-3">
            <i class="bi bi-coin text-success fs-3"></i>

            <div class="ms-4">
              <span class="text-success fw-bold small">EcoCr√©dits</span><br>
              <span class="fs-5">
                <strong class="text-primary">{{ app.user.tokens }}</strong>
                <span class="text-muted small">ECR</span>
              </span>
            </div>
          </div>

          {# <div class="d-flex align-items-center justify-content-md-end">
            <i class="bi bi-cash-stack text-success fs-3"></i> #}

            {# <div class="ms-3">
              <span class="text-success fw-bold small">Gains EcoRide</span><br>
              <span class="fs-5">
                <strong class="text-primary">
                  {{ app.user.earnings|number_format(0, ',', ' ') }}
                </strong>
                <span class="text-muted small">ECR</span>
              </span>
            </div> #}
          {# </div> #}

        </div>

      </div>

      {# =============================
         Informations personnelles
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">Informations personnelles</h5>

        <ul class="list-unstyled mb-0">
          <li class="mb-2">
            <i class="bi bi-envelope text-primary me-2"></i>
            {{ app.user.email }}
          </li>

          <li class="mb-2">
            <i class="bi bi-telephone text-primary me-2"></i>
            {{ app.user.telephone ?? 'Aucun num√©ro enregistr√©' }}
          </li>

          <li class="mb-2">
            <i class="bi bi-calendar text-primary me-2"></i>
            {% if app.user.dateNaissance %}
              {{ app.user.dateNaissance|date('d/m/Y') }}
            {% else %}
              <span class="text-muted small">Date de naissance non renseign√©e</span>
            {% endif %}
          </li>
        </ul>
      </div>

      {# =============================
         Bio
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">√Ä propos de vous</h5>

        {% if app.user.bio %}
          <p class="mb-0">{{ app.user.bio }}</p>
        {% else %}
          <p class="text-muted small mb-0">Aucune biographie renseign√©e.</p>
        {% endif %}
      </div>

      {# =============================
         Pr√©f√©rences
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">Vos pr√©f√©rences de voyage</h5>

        <ul class="list-unstyled">
          <li class="mb-2">
            <i class="bi bi-music-note-beamed text-success me-2"></i>
            Musique : <strong>{{ app.user.musique|capitalize }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-chat-dots text-success me-2"></i>
            Discussion : <strong>{{ app.user.discussion|capitalize }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-heart text-success me-2"></i>
            Animaux : <strong>{{ app.user.animaux|capitalize }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-cup-hot text-success me-2"></i>
            Pauses caf√© : <strong>{{ app.user.pausesCafe|capitalize }}</strong>
          </li>
          <li class="mb-2">
            <i class="bi bi-wind text-success me-2"></i>
            Fumeur : <strong>{{ app.user.fumeur|capitalize }}</strong>
          </li>
        </ul>
      </div>

      {# =============================
         üöó V√âHICULES
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">Mes v√©hicules</h5>

          <a href="{{ path('vehicle_new') }}"
             class="btn btn-sm btn-ecoride rounded-pill px-3">
            <i class="bi bi-plus-circle me-1"></i>
            Ajouter un v√©hicule
          </a>
        </div>

        {% if vehicles is defined and vehicles|length > 0 %}
          <ul class="list-group list-group-flush">
            {% for v in vehicles %}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong>{{ v.marque }} {{ v.modele }}</strong><br>
                  <small class="text-muted">
                    {{ v.immatriculation }} ‚Äî {{ v.energie }} ‚Äî {{ v.places }} places
                  </small>
                </div>

                <div class="d-flex gap-2">
                  <a href="{{ path('vehicle_edit', { id: v.id }) }}"
                     class="btn btn-sm btn-outline-success rounded-pill px-3"
                     title="Modifier">
                    <i class="bi bi-pencil"></i>
                  </a>

                  <a href="{{ path('vehicle_delete', { id: v.id }) }}"
                     class="btn btn-sm btn-outline-danger rounded-pill px-3"
                     title="Supprimer"
                     onclick="return confirm('Supprimer ce v√©hicule ?')">
                    <i class="bi bi-trash"></i>
                  </a>
                </div>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <p class="text-muted small mb-0">
            Aucun v√©hicule enregistr√© pour le moment.
          </p>
        {% endif %}
      </div>

      {# =============================
         ‚≠ê Avis re√ßus (carrousel continu)
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">Avis re√ßus</h5>

        {% if reviews is empty %}
          <p class="text-muted small mb-0">
            Aucun avis pour le moment.
          </p>
        {% else %}
          <div class="reviews-scroller-wrapper mt-2">
            <div class="reviews-track">

              {# S√©rie 1 #}
              {% for review in reviews %}
                <div class="review-card">

                  <div class="review-meta small text-muted mb-1">
                    {{ review.createdAt|date('d/m/Y') }}
                  </div>

                  <div class="fw-semibold mb-1">
                    {{ review.author ? review.author.prenom ~ ' ' ~ review.author.nom : 'Utilisateur EcoRide' }}
                  </div>

                  <div class="rating-line d-flex align-items-center mb-2">
                    <span class="text-warning me-2">
                      {% for i in 1..5 %}
                        {% if i <= review.rating %}‚òÖ{% else %}‚òÜ{% endif %}
                      {% endfor %}
                    </span>
                    <span class="small fw-semibold">{{ review.rating }}/5</span>
                  </div>

                  {% if review.comment %}
                    {% set parts = review.comment|split('Points positifs :') %}

                    {% if parts[0]|trim %}
                      <p class="comment-text mb-2">
                        {{ parts[0]|trim }}
                      </p>
                    {% endif %}

                    {% if parts|length > 1 and parts[1]|trim %}
                      <div class="positive-block small mb-2">
                        <div class="label fw-semibold text-success">
                          ‚úì Points positifs
                        </div>
                        <div class="content text-muted">
                          {{ parts[1]|trim }}
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}

                  <hr class="my-2">

                  <p class="text-muted small mb-0">
                    {{ review.trajet.villeDepart }} ‚Üí {{ review.trajet.villeArrivee }}
                  </p>
                </div>
              {% endfor %}

              {# S√©rie 2 (duplication pour boucle infinie fluide) #}
              {% for review in reviews %}
                <div class="review-card">

                  <div class="review-meta small text-muted mb-1">
                    {{ review.createdAt|date('d/m/Y') }}
                  </div>

                  <div class="fw-semibold mb-1">
                    {{ review.author ? review.author.prenom ~ ' ' ~ review.author.nom : 'Utilisateur EcoRide' }}
                  </div>

                  <div class="rating-line d-flex align-items-center mb-2">
                    <span class="text-warning me-2">
                      {% for i in 1..5 %}
                        {% if i <= review.rating %}‚òÖ{% else %}‚òÜ{% endif %}
                      {% endfor %}
                    </span>
                    <span class="small fw-semibold">{{ review.rating }}/5</span>
                  </div>

                  {% if review.comment %}
                    {% set parts = review.comment|split('Points positifs :') %}

                    {% if parts[0]|trim %}
                      <p class="comment-text mb-2">
                        {{ parts[0]|trim }}
                      </p>
                    {% endif %}

                    {% if parts|length > 1 and parts[1]|trim %}
                      <div class="positive-block small mb-2">
                        <div class="label fw-semibold text-success">
                          ‚úì Points positifs
                        </div>
                        <div class="content text-muted">
                          {{ parts[1]|trim }}
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}

                  <hr class="my-2">

                  <p class="text-muted small mb-0">
                    {{ review.trajet.villeDepart }} ‚Üí {{ review.trajet.villeArrivee }}
                  </p>
                </div>
              {% endfor %}

            </div>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>
{% endblock %}
