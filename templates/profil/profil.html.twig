{% extends 'base.html.twig' %}

{% block title %}Mon profil - EcoRide{% endblock %}

{% block body %}
<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      {# Sous-menu #}
      {% include 'profil/_profil_header.html.twig' %}

      {# Boutons côte à côte #}
      <div class="d-flex justify-content-center align-items-center gap-3 mt-4 mb-5">
        {% if 'ROLE_ADMIN' in app.user.roles %}
          <a href="{{ path('admin_dashboard') }}" class="btn btn-success rounded-pill px-4 py-2">
            Dashboard Admin
          </a>
        {% endif %}

        <a href="{{ path('app_profil_edit') }}" class="btn btn-ecoride px-4 py-2">
          Modifier mon profil
        </a>
      </div>

      {# =============================
   En-tête Profil : Photo + Nom + Tokens
   ============================= #}
<div class="profile-header d-flex align-items-center p-4 rounded shadow-sm mb-4 bg-white">

    {# --- Avatar --- #}
    <div class="me-4">
        {% if app.user.photo %}
            <img src="{{ asset('uploads/photos/' ~ app.user.photo) }}"
                 class="rounded-circle shadow-sm"
                 alt="Photo de profil"
                 width="110" height="110">
        {% else %}
            <div class="profile-avatar rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                 style="width:110px;height:110px;font-size:2rem;">
              {% set initials = (app.user.prenom|first ~ app.user.nom|first)|upper %}
              <span>{{ initials }}</span>
            </div>
        {% endif %}
    </div>

    {# --- Nom + Statut --- #}
    <div>
        <h3 class="mb-1">{{ app.user.prenom }} {{ app.user.nom }}</h3>
        <span class="badge bg-success">Compte confirmé</span>
        <p class="text-muted mb-0">
            Membre depuis {{ app.user.createdAt|date('Y') }}
        </p>
    </div>

    {# --- Note moyenne (si existante) --- #}
    {% if averageRating %}
        <div class="d-flex align-items-center ms-4">
            <span class="fw-bold me-2">{{ averageRating }}/5</span>
            <span style="color:#f1c40f;">
                {% for i in 1..5 %}
                    {% if i <= averageRating %}★{% else %}☆{% endif %}
                {% endfor %}
            </span>
        </div>
    {% endif %}

    <div class="ms-auto">
    <div class="d-flex align-items-center">

        {# Icône tokens correctement centrée #}
        <div class="d-flex align-items-center justify-content-center" style="height: 48px;">
            <i class="bi bi-coin text-success fs-3"></i>
        </div>

        <div class="ms-3 d-flex flex-column justify-content-center" style="line-height: 1.2;">
            <span class="text-success fw-bold small">Tokens disponibles</span>
            <span class="fs-5">
                <strong class="text-primary">{{ app.user.tokens }}</strong>
                <span class="text-muted small">tokens</span>
            </span>
        </div>

    </div>
</div>



</div>




      {# =============================
         Informations personnelles
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">Informations personnelles</h5>

        <ul class="list-unstyled mb-0">
          <li class="mb-2">
            <i class="bi bi-envelope text-primary me-2"></i>{{ app.user.email }}
          </li>

          <li class="mb-2">
            <i class="bi bi-telephone text-primary me-2"></i>
            {{ app.user.telephone ?? 'Aucun numéro enregistré' }}
          </li>

          <li class="mb-2">
            <i class="bi bi-calendar text-primary me-2"></i>
            {% if app.user.dateNaissance %}
              {{ app.user.dateNaissance|date('d/m/Y') }}
            {% else %}
              <span class="text-muted small">Date de naissance non renseignée</span>
            {% endif %}
          </li>
        </ul>

      </div>


      {# =============================
         À propos / Bio
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">À propos de vous</h5>

        {% if app.user.bio %}
          <p class="mb-0">{{ app.user.bio }}</p>
        {% else %}
          <p class="text-muted small mb-0">Aucune biographie renseignée.</p>
        {% endif %}
      </div>


      {# =============================
         Préférences de voyage
         ============================= #}
      <div class="bg-white p-4 rounded shadow-sm mb-4">
        <h5 class="mb-3">Vos préférences de voyage</h5>

        <ul class="list-unstyled">

          <li class="mb-2">
            <i class="bi bi-music-note-beamed text-success me-2"></i>
            Musique : <strong>{{ app.user.musique|capitalize }}</strong>
          </li>

          <li class="mb-2">
            <i class="bi bi-chat-dots text-success me-2"></i>
            Discussion : <strong>{{ app.user.discussion|capitalize }}</strong>
          </li>

          <li class="mb-2">
            <i class="bi bi-heart text-success me-2"></i>
            Animaux : <strong>{{ app.user.animaux|capitalize }}</strong>
          </li>

          <li class="mb-2">
            <i class="bi bi-cup-hot text-success me-2"></i>
            Pauses café : <strong>{{ app.user.pausesCafe|capitalize }}</strong>
          </li>

          <li class="mb-2">
            <i class="bi bi-wind text-success me-2"></i>
            Fumeur : <strong>{{ app.user.fumeur|capitalize }}</strong>
          </li>

        </ul>

      </div>


    </div>
  </div>
</section>

{% endblock %}
