{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - EcoRide{% endblock %}

{% block body %}

<section class="container my-5">

    <div class="row justify-content-center">
        <div class="col-lg-8">

            {# Sous-menu profil #}
            {% include 'profil/_profil_header.html.twig' %}

            <!-- TITRE -->
            <div class="bg-white p-4 rounded shadow-sm mb-4">
                <h3 class="mb-2">Modifier mon profil</h3>
                <p class="text-muted small mb-0">
                    Mettez à jour vos informations personnelles, vos préférences et votre photo.
                </p>
            </div>

            <!-- FORMULAIRE -->
            <div class="bg-white p-4 rounded shadow-sm">

                {{ form_start(form) }}

<h5 class="mb-3">Informations personnelles</h5>

<div class="row g-3">
    <div class="col-md-6">
        {{ form_row(form.prenom) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.nom) }}
    </div>
    <div class="col-md-12">
        {{ form_row(form.email) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.telephone) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.dateNaissance) }}
    </div>
    <div class="col-12">
        {{ form_row(form.bio) }}
    </div>
</div>

<hr class="my-4">

<h5 class="mb-3">Photo de profil</h5>
{{ form_row(form.photo) }}

<hr class="my-4">

<h5 class="mb-3">Préférences de voyage</h5>

<div class="row g-3">
    <div class="col-md-6">
        {{ form_row(form.musique) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.discussion) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.animaux) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.pausesCafe) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.fumeur) }}
    </div>
</div>

<div class="d-flex justify-content-between mt-4">

    <a href="{{ path('app_profil') }}"
       class="btn btn-ecoride-red rounded-pill px-4">
        Annuler
    </a>

    <button class="btn btn-ecoride rounded-pill px-4">
        Enregistrer
    </button>

</div>


{{ form_end(form) }}


            </div>

        </div>
    </div>

</section>

{% endblock %}
