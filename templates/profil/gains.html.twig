{% extends 'base.html.twig' %}

{% block title %}Mes gains - EcoRide{% endblock %}

{% block body %}

<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      {% include 'profil/_profil_header.html.twig' %}

      {# =============================
         EN-TÊTE
         ============================= #}
      <div class="bg-white rounded shadow-sm p-4 mb-4">
        <h3 class="mb-1">Mes gains</h3>
        <p class="text-muted small mb-0">
          Historique des versements liés à vos trajets EcoRide.
        </p>
      </div>

      {# =============================
         SOLDE CUMULATIF
         ============================= #}
      <div class="bg-white rounded shadow-sm p-4 mb-4 text-center">
        <span class="text-muted small">Gains cumulés</span>
        <h2 class="fw-bold text-success mb-0">
          {{ earnings|number_format(2, ',', ' ') }} ECR
        </h2>
      </div>

      {# =============================
         HISTORIQUE
         ============================= #}
      <div class="bg-white rounded shadow-sm p-4">

        <h5 class="mb-3">Détail par trajet</h5>

        {% if trajets|length > 0 %}
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Trajet</th>
                  <th>Date</th>
                  <th>Montant</th>
                  <th>Statut</th>
                </tr>
              </thead>
              <tbody>
                {% for trajet in trajets %}
                  <tr>
                    <td>
                      {{ trajet.villeDepart }} → {{ trajet.villeArrivee }}
                    </td>
                    <td class="text-muted">
                      {{ trajet.dateDepart|date('d/m/Y') }}
                    </td>
                    <td class="fw-semibold">
                      {{ trajet.payoutAmount|number_format(2, ',', ' ') }} ECR
                    </td>
                    <td>
                      {% if trajet.payoutStatus == 'RELEASED' %}
                        <span class="badge bg-success">Versé</span>
                      {% else %}
                        <span class="badge bg-warning text-dark">En attente</span>
                      {% endif %}
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <p class="text-muted small mb-0">
            Aucun gain enregistré pour le moment.
          </p>
        {% endif %}

      </div>

    </div>
  </div>
</section>

{% endblock %}
