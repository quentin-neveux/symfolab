{# templates/emails/_layout.html.twig #}
<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="x-apple-disable-message-reformatting">
  <title>EcoRide</title>
</head>

<body style="margin:0; padding:0; background:#f3f5f4; font-family:Arial,Helvetica,sans-serif; color:#1b1b1b;">
  {# Preheader (texte aperçu) #}
  <div style="display:none; max-height:0; overflow:hidden; opacity:0; color:transparent; mso-hide:all;">
    EcoRide — notification
  </div>

  <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="background:#f3f5f4;">
    <tr>
      <td align="center" style="padding:24px 12px;">

        {# Container #}
        <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="600" style="width:600px; max-width:600px;">
          <tr>
            <td style="padding:0 0 12px;">
              {# Header #}
              <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%"
                     style="background:#ffffff; border-radius:16px; overflow:hidden; border:1px solid #e8ecea;">
                <tr>
                  <td style="padding:18px 20px; background:#1f7a4f;">
                    <div style="font-size:18px; font-weight:bold; color:#ffffff; letter-spacing:0.2px;">
                      EcoRide
                    </div>
                    <div style="font-size:12px; color:#dff3ea; margin-top:4px;">
                      Covoiturage &amp; mobilité responsable
                    </div>
                  </td>
                </tr>

                {# Body #}
                <tr>
                  <td style="padding:20px;">
                    {% block body %}{% endblock %}
                  </td>
                </tr>

                {# Footer #}
                <tr>
                  <td style="padding:16px 20px; background:#fafafa; border-top:1px solid #e8ecea;">
                    <p style="margin:0; font-size:12px; color:#6b7280;">
                      Cet email a été envoyé automatiquement par EcoRide. Merci de ne pas répondre.
                    </p>
                    <p style="margin:10px 0 0; font-size:12px; color:#6b7280;">
                      © {{ "now"|date("Y") }} EcoRide
                    </p>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          {# Small spacer text for some clients #}
          <tr>
            <td style="font-size:0; line-height:0; height:8px;">&nbsp;</td>
          </tr>

        </table>
      </td>
    </tr>
  </table>
</body>
</html>
