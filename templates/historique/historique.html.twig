{% extends 'base.html.twig' %}

{% block title %}Historique - EcoRide{% endblock %}

{% block body %}

<section class="hero-global hero-historique text-center text-white">
  <div class="container">
    <h2 class="hero-title mb-3 text-white">Historique</h2>
    <h2 class="hero-tagline mb-4 text-white">Vos trajets passés et terminés</h2>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container">
    <div class="card shadow-sm rounded-4 border-0">
      <div class="card-body">

        <h3 class="mb-4 text-success fw-bold">Trajets passés</h3>

        <table class="table table-hover align-middle">
          <thead class="table-success">
            <tr>
              <th>Départ</th>
              <th>Arrivée</th>
              <th>Date</th>
              <th>Rôle</th>
              <th>Statut</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>

          <tbody>

            {% for item in historiques %}

              {% set trajet = item.trajet %}
              {% set role = item.role %}
              {% set reservation = item.reservation %}

              <tr class="clickable-row"
                  data-href="{{ path('app_trajet_detail', { id: trajet.id }) }}">

                <td>{{ trajet.villeDepart }}</td>
                <td>{{ trajet.villeArrivee }}</td>
                <td>{{ trajet.dateDepart|date('d/m/Y') }}</td>

                <!-- RÔLE -->
                <td>
                  {% if role == 'conducteur' %}
                    <span class="badge bg-primary">Conducteur</span>
                  {% else %}
                    <span class="badge bg-info text-dark">Passager</span>
                  {% endif %}
                </td>

                <!-- STATUT -->
                <td>
                  {% if role == 'conducteur' %}
                    {% if trajet.conducteurConfirmeFin %}
                      <span class="badge bg-success">Terminé</span>
                    {% else %}
                      <span class="badge bg-warning text-dark">En attente conducteur</span>
                    {% endif %}
                  {% else %}
                    {% if reservation.passagerConfirmeFin %}
                      <span class="badge bg-success">Terminé</span>
                    {% else %}
                      <span class="badge bg-warning text-dark">En attente</span>
                    {% endif %}
                  {% endif %}
                </td>

                <!-- ACTIONS -->
                <td class="text-center">

                  {% if role == 'conducteur' %}
                    {% if not trajet.conducteurConfirmeFin %}
                      <a href="{{ path('trajet_fin_conducteur', { id: trajet.id }) }}"
                         class="btn btn-success btn-sm rounded-pill no-row-click">
                        Valider fin
                      </a>
                    {% else %}
                      <span class="text-success fw-semibold">✔ Validé</span>
                    {% endif %}
                  {% endif %}

                  {% if role == 'passager' %}
                    {% if not reservation.passagerConfirmeFin %}
                      <a href="{{ path('trajet_fin_passager', { id: trajet.id }) }}"
                         class="btn btn-outline-success btn-sm rounded-pill no-row-click">
                        J’ai terminé
                      </a>
                    {% else %}
                      <span class="text-success fw-semibold">✔ Validé</span>
                    {% endif %}
                  {% endif %}

                  {% if role == 'passager'
                     and trajet.conducteurConfirmeFin
                     and reservation.passagerConfirmeFin
                     and reservation.isPaid
                     and not reservation.aDejaNote %}
                    <div class="mt-2">
                      <a href="{{ path('app_review', { id: trajet.conducteur.id }) }}"
                         class="btn btn-outline-primary btn-sm rounded-pill no-row-click">
                        Noter ⭐
                      </a>
                    </div>
                  {% elseif reservation and reservation.aDejaNote %}
                    <p class="small text-muted mt-2">Déjà noté ✔</p>
                  {% endif %}

                </td>
              </tr>

            {% else %}
              <tr>
                <td colspan="6" class="text-center text-muted py-4">
                  Aucun trajet terminé pour le moment.
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>

      </div>
    </div>
  </div>
</section>

{% endblock %}
