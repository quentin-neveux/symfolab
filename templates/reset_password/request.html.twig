{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié — EcoRide{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm border-0 rounded-4 p-4">
                <h1 class="h4 text-center mb-3">Mot de passe oublié</h1>

                <p class="text-muted text-center mb-4">
                    Indique ton adresse email pour recevoir un lien de réinitialisation.
                </p>

                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}

                    <button class="btn btn-success w-100 mt-3">
                        Envoyer le lien
                    </button>
                {{ form_end(requestForm) }}

                <div class="text-center mt-4">
                    <a href="{{ path('app_connexion') }}" class="text-decoration-none small">
                        ← Retour à la connexion
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
