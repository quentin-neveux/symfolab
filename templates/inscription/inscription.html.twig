{% extends 'base.html.twig' %}

{% block title %}Inscription - EcoRide{% endblock %}

{% block body %}
<!-- HERO INSCRIPTION -->
<section class="hero-section hero-inscription d-flex align-items-center text-center text-white position-relative">
  <div class="container">
    <h2 class="hero-title mb-3">Inscription</h2>
    <h2 class="hero-tagline mb-4">Rejoins la communauté EcoRide !</h2>
  </div>
</section>

<!-- FORMULAIRE D’INSCRIPTION -->
<section class="connexion-section py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card ecoride-form shadow p-4 rounded-4 position-relative">

          <div class="text-center mb-4">
            <h2 class="fw-bold text-success">Créer un compte</h2>
            <p class="text-muted">C’est rapide, gratuit et éco-responsable</p>
          </div>

          {{ form_start(registrationForm, { attr: { class: 'eco-form' } }) }}
          {{ form_errors(registrationForm) }}

          <!-- Prénom -->
          {{ form_row(registrationForm.prenom, {
            row_attr: { class: 'mb-3' },
            attr: { class: 'form-control', placeholder: 'Ex : Jean' }
          }) }}

          <!-- Nom -->
          {{ form_row(registrationForm.nom, {
            row_attr: { class: 'mb-3' },
            attr: { class: 'form-control', placeholder: 'Ex : Dupont' }
          }) }}

          <!-- Email principal -->
          {{ form_row(registrationForm.email.first, {
            row_attr: { class: 'mb-3' },
            attr: { class: 'form-control', placeholder: 'exemple@domaine.fr' }
          }) }}

          <!-- Confirmation email -->
          {{ form_row(registrationForm.email.second, {
            row_attr: { class: 'mb-3' },
            attr: { class: 'form-control', placeholder: 'Répétez votre adresse e-mail' }
          }) }}

          <!-- Mot de passe -->
          {{ form_row(registrationForm.plainPassword.first, {
            row_attr: { class: 'mb-3' },
            attr: { class: 'form-control', placeholder: '••••••••' }
          }) }}

          <!-- Confirmation mot de passe -->
          {{ form_row(registrationForm.plainPassword.second, {
            row_attr: { class: 'mb-3' },
            attr: { class: 'form-control', placeholder: 'Répétez votre mot de passe' }
          }) }}

          <!-- Case conditions -->
          {{ form_row(registrationForm.agreeTerms, {
            row_attr: { class: 'mb-3 form-check' },
            label_attr: { class: 'form-check-label' },
            attr: { class: 'form-check-input' }
          }) }}

          <!-- Bouton -->
          <button type="submit" class="btn btn-ecoride w-100 mt-3">Créer mon compte</button>

          {{ form_end(registrationForm) }}

        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
