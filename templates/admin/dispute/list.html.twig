          <td class="text-end">
            <a href="{{ path('admin_dispute_show', {id: d.id}) }}"
               class="btn btn-sm btn-outline-success rounded-pill">
              Ouvrir
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endif %}

{% endblock %}
