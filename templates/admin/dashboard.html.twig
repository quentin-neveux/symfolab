{% extends 'base.html.twig' %}

{% block title %}Administration - EcoRide{% endblock %}

{% block body %}
<section class="py-5 text-center">
  <div class="container">
    <h1 class="text-success fw-bold mb-4">Tableau de bord administrateur</h1>
    <p class="lead mb-5">Bienvenue {{ admin.prenom ?? admin.email }}</p>

    <div class="row g-4 justify-content-center">
      <div class="col-md-4">
        <div class="card shadow border-0 rounded-4 p-4">
          <h3 class="text-success mb-2">{{ userCount }}</h3>
          <p>Utilisateurs enregistrés</p>
          <a href="{{ path('app_admin_users') }}" class="btn btn-outline-success mt-2">Voir les utilisateurs</a>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card shadow border-0 rounded-4 p-4">
          <h3 class="text-success mb-2">{{ trajetCount }}</h3>
          <p>Trajets proposés</p>
          <a href="{{ path('app_admin_trajets') }}" class="btn btn-outline-success mt-2">Voir les trajets</a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
