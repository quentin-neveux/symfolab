{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">

  <h2 class="mb-4">Tableau de bord Admin</h2>

  <div class="row text-center">

    <div class="col-md-4 mb-3">
      <div class="p-4 bg-light rounded-4 shadow-sm">
        <h3>{{ nbUsers }}</h3>
        <p>Utilisateurs inscrits</p>
      </div>
    </div>

    <div class="col-md-4 mb-3">
      <div class="p-4 bg-light rounded-4 shadow-sm">
        <h3>{{ nbTrajets }}</h3>
        <p>Trajets totaux</p>
      </div>
    </div>

    <div class="col-md-4 mb-3">
      <div class="p-4 bg-light rounded-4 shadow-sm">
        <h3>{{ nbTrajetsToday }}</h3>
        <p>Trajets publiés aujourd’hui</p>
      </div>
    </div>

  </div>

  <div class="mt-5 text-center">
    <a href="{{ path('admin_users_list') }}" class="btn btn-ecoride rounded-pill px-4 mx-2">Gérer les utilisateurs</a>
    <a href="{{ path('admin_trajets_list') }}" class="btn btn-ecoride rounded-pill px-4 mx-2">Gérer les trajets</a>
  </div>

</div>
{% endblock %}
