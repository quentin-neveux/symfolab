{% extends 'admin/_layout.html.twig' %}

{% block admin_content %}

<h2 class="text-success mb-4 fw-bold">
    Modifier lâ€™utilisateur
</h2>

<div class="card p-4 shadow-sm rounded-4">

    <p class="text-muted mb-4">
        Compte : <strong>{{ user.email }}</strong>
    </p>

    {{ form_start(form) }}

        {# ============================
           CHAMPS UTILISATEUR
        ============================ #}
        {{ form_row(form.prenom) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}

        {# ============================
           SWITCH ADMIN (PROPRE)
        ============================ #}
        <div class="mb-4">
            <div class="form-check form-switch">
                {{ form_widget(form.isAdmin, {
                    attr: { class: 'form-check-input' }
                }) }}
                {{ form_label(form.isAdmin, 'Administrateur', {
                    label_attr: { class: 'form-check-label fw-semibold' }
                }) }}
            </div>
        </div>

        <hr class="my-4">

        {# ============================
           AJOUT MANUEL DE TOKENS
        ============================ #}
        <div class="mb-4">
            <label for="add_tokens" class="form-label fw-semibold">
                Ajouter des tokens
            </label>

            <input
                type="number"
                id="add_tokens"
                name="add_tokens"
                class="form-control rounded-pill py-2"
                placeholder="Ex : 20"
                min="1"
            >

            <small class="text-muted">
                Laisser vide pour ne pas modifier le solde.
            </small>
        </div>

        <div class="text-end">
            <button class="btn btn-success rounded-pill px-5 py-2 fw-semibold">
                Enregistrer
            </button>
        </div>

    {{ form_end(form) }}

</div>

{% endblock %}
