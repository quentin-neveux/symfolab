{% extends 'admin/_layout.html.twig' %}

{% block admin_title %}Historique des transactions tokens{% endblock %}

{% block admin_content %}

<div class="card shadow-sm rounded-4">
    <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
            <thead class="table-success">
                <tr>
                    <th>Date</th>
                    <th>Utilisateur</th>
                    <th>Type</th>
                    <th>Raison</th>
                    <th class="text-end">Montant</th>
                    <th>Trajet</th>
                </tr>
            </thead>
            <tbody>
            {% for tx in transactions %}
                <tr>
                    <td>
                        {{ tx.createdAt|date('d/m/Y') }}<br>
                        <small class="text-muted">{{ tx.createdAt|date('H:i') }}</small>
                    </td>
                    <td>
                        {% if tx.user %}
                            {{ tx.user.email }}
                        {% else %}
                            <em class="text-muted">Plateforme</em>
                        {% endif %}
                    </td>
                    <td>
                        {% if tx.type == 'CREDIT' %}
                            <span class="badge bg-success">CREDIT</span>
                        {% else %}
                            <span class="badge bg-danger">DEBIT</span>
                        {% endif %}
                    </td>
                    <td>
                        <code>{{ tx.reason }}</code>
                    </td>
                    <td class="text-end fw-bold">
                        {% if tx.type == 'CREDIT' %}
                            <span class="text-success">+{{ tx.amount }}</span>
                        {% else %}
                            <span class="text-danger">-{{ tx.amount }}</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if tx.trajetId %}
                            #{{ tx.trajetId }}
                        {% else %}
                            â€”
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        Aucune transaction.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{# =========================
   PAGINATION 
========================= #}
<div class="d-flex justify-content-center mt-4">
    {{ knp_pagination_render(transactions) }}
</div>

{% endblock %}
